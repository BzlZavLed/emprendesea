{# templates/store/shipPicker.html.twig #}
{% extends 'store_base.html.twig' %}
{% block code %}
<script>
	window.onload = function(){
    	document.body.style.backgroundColor = "white";
    };
  
</script>
<div class="w3aitssinglewthree" style="background-color: #D6D9DB;">
  <div class="horizonDiv" style="background-color: #FFF; height:50px;width: 70%; border: 5px; border-color: #5B6770; border-style: solid; margin: auto;">
    <div class="divStep">
      <span style="color: #5B6770; font-size:1.5vw;">Articulos</span>
    </div>
    <div class="selectedDivStep">
      <span style="color: #fff; font-size:1.5vw;">Envío</span>
    </div>
    <div class="divStep">
      <span style="color: #5B6770; font-size:1.5vw;">Resumen</span>
    </div>
    <div class="divStep">
      <span style="color: #5B6770; font-size:1.5vw;">Pago</span>
    </div>
    <div class="divStep">
      <span style="color: #5B6770; font-size:1.5vw;">Terminar</span>
    </div>
  </div>
  <br>
  <div style="width: 70%; height: auto; margin:auto; background-color: #fff;">
    {% if rates %}
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Compañia</th>
            <th>Servicio</th>
            <th>Fecha estimada</th>
            <th>Costo</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for rate in rates %}
          <tr>
            <td>
              {% if rate.logo|length > 0 %}
                <img src="{{ rate.logo }}" alt="" style="max-width: 200px;" height=100 width=10></img>
              {% endif %} 
            </td>
            <td>{{ rate.carrier}}</td>
            <td>{{ rate.service }}</td>
            <td>{{ rate.delivery.format('Y-m-d') }}</td>
            <td>${{ rate.cost }} MXN</td>
            <td>
              <a href="{{ path('shippOps') }}/{{ pedido }}/{{rate.rateId}}" class="btn btn-light">seleccionar</a>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
      {% else %}
      <p>No hay medios para enviar tu pedido</p>
      {% endif %} 
  </div>
</div>
<br>
{% endblock %}